<header class="navbar navbar-expand-lg mr-auto">
   <div class="container">
      <%= link_to "セブンルール", root_path, id: "logo" %>
      <% if logged_in? || logged_in_staff? %>
         <div id="menu_open" class="menu">
            <label class="toggle" for="open"><i class="fa fa-bars" aria-hidden="true"></i></label>
            <input id="open" type="checkbox">
            <div id="menu">
               <nav>
                  <ul>
                     <li>
                        <div class="store_info">
                           <label class="toggle" for="close"><i class="fas fa-times"></i></label>
                           <input id="close" type="checkbox">
                           <% if logged_in? && logged_in_staff?%>
                              <h1><%= link_to current_master.store_name, root_path %></h1>
                           <% elsif logged_in_staff?  %>
                              <h1><%= link_to current_staff.master.store_name, root_path %></h1>
                           <% elsif logged_in? %>
                              <h1><%= link_to current_master.store_name, root_path %></h1>
                           <% end %>
                        </div>
                     </li>
                     <li><%= link_to "ヘルプ", help_path, class:"help" %></li>
                     <div class="line"></div>
                     
                     <% if logged_in? && logged_in_staff? %>
                        <%= render "layouts/menu_master" %>
                        <br>
                        <div class="line"></div>
                        <%= render "layouts/menu_staff" %>
                     <% elsif logged_in_staff? %>
                        <%= render "layouts/menu_staff" %>
                     <% elsif logged_in? %>  
                        <%= render "layouts/menu_master" %>
                     <% end %>  
                  </ul>
               </nav>
            </div>   
         </div>
      <% else %>
         <div class="nav-btn">
            <%= link_to "新規登録", signup_path, class:"btn btn-lg btn-danger signup" %> 
            <%= link_to "店長ログイン", login_path,class:"btn btn-lg btn-primary login" %> 
         </div>
      <% end %>
   </div>   
</header>   
    
    